[user]
	name = Russell Yeo
	email = rusyeo@gmail.com
# Override [user] for Depop repositories
[includeIf "gitdir:~/Developer/Depop/**"]
	path = ~/.dotfiles/.gitconfig_depop
[credential]
	helper = osxkeychain
[core]
	pager = delta
	editor = code --wait
	excludesfile = ~/.dotfiles/.gitignore_global
[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true 
	side-by-side = true
# [pager]
	# diff = diff-so-fancy | less --tabs=4 -RFX
	# show = diff-so-fancy | less --tabs=4 -RFX
[init]
	defaultBranch = main
[merge]
	tool = smerge
[diff]
    colorMoved = default